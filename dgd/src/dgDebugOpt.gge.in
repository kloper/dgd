package "dgd"
version "@DGD_VERSION@"

#opt   long name    short  help                                 type   required
#---   ---------    -----  ------                               ----   --------
option "trace-version" -        "Print dgd version and exit"          flag  off
option "trace-help"   -         "Print debug help and exit"           flag  off
option "trace-enable" -         "Enable debug"                        flag  off
option "trace-main-file" -      "Primary debug output file"           string no
option "trace-min-width"  -     "Default minimum output width"        int    no
option "trace-max-width"  -     "Default maximum output width"        int    no
option "trace-indent-step" -    "Default indent step"                 int    no
option "trace-allow-wrap" -     "Allow character wrap by default"     flag   on
option "trace-allow-word-wrap" - "Allow word wrap by default"         flag   on
option "trace-space-characters" - "Characters separating words"       string no
option "trace-turn-on" -        "Regexp on channels to turn on"       string no
option "trace-turn-off" -        "Regexp on channels to turn off"     string no
