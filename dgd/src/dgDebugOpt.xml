<cloxx>
    <config>
	<autohelp/>
    </config>

    <options>
	<option id="trace_version" type="flag" strict="yes"
                mandatory="no"
	        default="false">
	    <name>trace-version</name>
	    <comment>Print DGD version and exit</comment>
	</option>
	<option id="trace_help" type="flag" strict="yes"
                mandatory="no"
	        default="false">
	    <name>trace-help</name>
	    <comment>Print help message on DGD command line 
	             options and exit
	    </comment>
	</option>
	<option id="trace_enable" type="flag" strict="yes" 
                mandatory="no"
                default="false">
	    <name>trace-enable</name>
	    <comment>Enable tracing output.</comment>
	</option>
        <option id="trace_main_file" type="string" strict="yes"
                mandatory="no"
	        default="debug.log">
	    <name>trace-main-file</name>
	    <comment>Default log file</comment>
	</option>
	<option id="trace_min_width" type="int" strict="yes"
	        default="20">
		<name>trace-min-width</name>
		<comment>Default minimum output width</comment>
	</option>
	<option id="trace_max_width" type="int" strict="yes"
                mandatory="no"
	        default="79">
		<name>trace-max-width</name>
		<comment>Default maximum output width</comment>
	</option>
	<option id="trace_indent_step" type="int" strict="yes"
                mandatory="no"
	        default="4">
		<name>trace-indent-step</name>
		<comment>Default indentation step</comment>
	</option>
	<option id="trace_allow_wrap" type="bool" strict="yes" 
                mandatory="no"
                default="true">
	    <name>trace-allow-wrap</name>
	    <comment>Enable character wrap</comment>
	</option>
	<option id="trace_allow_word_wrap" type="bool" strict="yes" 
	        default="true">
	    <name>trace-allow-word-wrap</name>
	    <comment>Enable word wrap</comment>
	</option>
        <option id="trace_space_characters" type="string" strict="yes"
                mandatory="no">
	    <name>trace-space-characters</name>
	    <comment>Word Separator Characters</comment>
	</option>
        <option id="trace_turn_on" type="string" strict="yes"
                mandatory="no"
	        default=".">
	    <name>trace-turn-on</name>
	    <comment>Regexp on Channels which need to be turned on</comment>
	</option>
        <option id="trace_turn_off" type="string" strict="yes"
                mandatory="no" 
	        default=".">
	    <name>trace-turn-off</name>
	    <comment>Regexp on Channels which need to be turned off</comment>
	</option>
    </options>
</cloxx>
